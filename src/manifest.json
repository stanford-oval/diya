{
  "name": "Nightmare Recorder",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "A Chrome extension for automating tasks in the browser.",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "tts",
    "clipboardRead",
    "webNavigation"
  ],
  "icons": {
    "16": "images/app_icon_16.png",
    "128": "images/app_icon_128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_icon": "images/icon-black.png",
    "default_title": "Puppeteer Recorder",
    "default_popup": "index.html"
  },
  "commands": {
    "TOGGLE_SCREENSHOT_MODE": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Take screenshot"
    },
    "TOGGLE_SCREENSHOT_CLIPPED_MODE": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Take screenshot clipped"
    }
  },
  "content_scripts": [{
    "matches": [
      "http://localhost:3000/*",
      "http://localhost:5000/*",
      "http://127.0.0.1:3000/*",
      "http://127.0.0.1:3000/*/*",
      "https://voiceassistantturk.herokuapp.com/*",
      "https://voiceassistantturk.herokuapp.com/*/*",
      "https://www.walmart.com/*",
      "https://www.soundboard.com/*",
      "https://www.weather.gov/*",
      "https://en.wikipedia.org/*",
      "https://www.arxiv.org/*"
    ],
    "js": ["content-script.js"],
    "css": ["main.css"]
  }],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
